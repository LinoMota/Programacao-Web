<div class="row">
    <div class="col-lg-12">
        <div class="page-header">
            <h1 id="tables">Áreas da Ciência</h1>
        </div>

        <div class="bs-component">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Nome</th>
                    </tr>
                </thead>
                <tbody>

                    {{#each areas}}
                    <tr class="table-dark">
                        <th scope="row">{{id}}</th>
                        <td>{{nome}}</td>
                    </tr>
                    {{/each}}

                </tbody>
            </table>
        </div>
    </div>
</div>