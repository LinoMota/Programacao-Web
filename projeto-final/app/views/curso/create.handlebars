<div class="row mt-8">
    <h1 class="col-11">Cadastro de curso</h1>
    <button type="button" class="btn btn-primary mt-2 col-1 " onclick="location.href = '/curso'">Voltar</button>
</div>

<div class="bs-docs-section row col-8">
    <form action="/curso/create" method="post" id="form">
        <fieldset>
</div>
<div class="form-group">
    <label for="sigla">Sigla :</label>
    <input type="text" maxlength="255" class="form-control" value="{{curso.sigla}}" name="sigla"
        placeholder="Informe a Sigla do Curso">
    <div class="invalid-feedback">{{showError errors 'sigla'}}</div>
</div>

<div class="form-group">
    <label for="nome">Nome : </label>
    <input type="text" maxlength="255" class="form-control" value="{{curso.nome}}" name="nome"
        placeholder="Informe o nome do Curso">
    <div class="invalid-feedback">{{showError errors 'nome'}}</div>
</div>

<div class="form-group">
    <label for="descricao">Descrição :</label>
    <textarea class="form-control" name="descricao" rows="3">{{curso.descricao}}</textarea>
</div>

<div class="form-group">
    <label for="curso">Área :</label>
    <select class="form-control" id="areas" name="area">
        {{#each areas}}
        <tr class="table-dark">
            <option value="{{id}}">{{nome}}</option>
        </tr>
        {{/each}}

    </select>
</div>
<button class="btn btn-primary mt-3" id="send">Cadastrar</button>
</fieldset>
</form>

</div>

<script>
    (() => {
        const validationList = document.querySelectorAll('.invalid-feedback')
        validationList.forEach(validation => {
            if (String(validation.innerHTML).trim() != '')
                validation.style.display = 'block'
        })

    })()
</script>