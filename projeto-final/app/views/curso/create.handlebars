<div class="row mt-8">
    <h1 class="col-11">Cadastro de curso</h1>
    <button type="button" class="btn btn-primary mt-2 col-1 " onclick="location.href = '/curso'">Voltar</button>
</div>

<div class="bs-docs-section row col-8">
    <form action="/curso/create" method="post" id="form">
        <fieldset>
</div>
<div class="form-group">
    <label for="sigla">Sigla</label>
    <input type="text" maxlength="255" class="form-control" name="sigla" placeholder="Informe a Sigla do Curso">
</div>

<div class="form-group">
    <label for="nome">Nome : </label>
    <input type="text" maxlength="255" class="form-control" name="nome" placeholder="Informe o nome do Curso">
</div>

<div class="form-group">
    <label for="descricao">Descrição :</label>
    <textarea class="form-control" name="descricao" rows="3"></textarea>
</div>

<div class="form-group">
    <label for="curso">Área :</label>
    <select class="form-control" id="areas" name="area">
    </select>
</div>
<button class="btn btn-primary mt-3" id="send">Cadastrar</button>
</fieldset>
</form>

</div>